{
	"name": "drizzle-prisma-generator",
	"author": "Drizzle Team",
	"version": "0.1.7",
	"description": "Generate Drizzle schema from Prisma schema",
	"scripts": {
		"run": "pnpm run build && cd ../prisma-testbench && npx prisma generate dev && code ./src/db/schema.ts",
		"build": "pnpm tsx scripts/build.ts",
		"b": "pnpm build",
		"pack": "(cd dist && npm pack --pack-destination ..) && rm -f package.tgz && mv *.tgz package.tgz",
		"publish": "npm publish package.tgz",
		"test": "vitest run",
		"lint": "dprint check --list-different"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.3",
		"@types/node": "^20.12.7",
		"dprint": "^0.45.1",
		"prisma": "^6.0.0",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"zx": "^8.2.3"
	},
	"keywords": [
		"drizzle",
		"prisma",
		"orm",
		"pg",
		"mysql",
		"postgresql",
		"postgres",
		"sqlite",
		"database",
		"sql",
		"typescript",
		"ts",
		"schema"
	],
	"bin": "./index.js",
	"main": "./index.js",
	"sideEffects": false,
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/drizzle-team/drizzle-prisma-generator.git"
	},
	"homepage": "https://github.com/drizzle-team/drizzle-prisma-generator",
	"dependencies": {
		"@prisma/generator-helper": "^6.0.0"
	}
}
